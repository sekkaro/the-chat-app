{
  "name": "the-chat-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc && copyfiles -u 1 -e src/**/*.ts src/**/*.* dist/",
    "build:dev": "copyfiles -u 1 -e src/**/*.ts src/**/*.* dist/ && node dist/index.js",
    "dev": "tsc-watch --onSuccess \"yarn build:dev\"",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.9.1",
    "copyfiles": "^2.4.1",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.2"
  }
}
